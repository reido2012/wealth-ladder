{
  "appId": "com.omar.networthplanner",
  "productName": "Net Worth Planner",
  "directories": {
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "public/electron.js",
    "public/preload.js",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.finance",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icon.icns"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "linux": {
    "category": "Office",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.svg",
    "desktop": {
      "Name": "Net Worth Planner",
      "Comment": "Track your net worth and financial goals",
      "Categories": "Office;Finance;",
      "Keywords": "finance;money;budget;planning;wealth;"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "appImage": {
    "artifactName": "${productName}-${version}.AppImage"
  },
  "publish": {
    "provider": "github",
    "owner": "reido2012",
    "repo": "wealth-ladder"
  }
}
